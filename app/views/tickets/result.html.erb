<div class="container-fluid tickets-buy">
  <div class="row tickets-header">
    <div class="col-xs-12 col-md-11 col-md-offset-1">
      <h3> <%= @event.name %> </h3>
      <div class="pull-left">
        <%= fa_icon 'map-marker' %>
      </div>
      <div class="venue-details">
       <%= @event.venue.name %>
       <br/>
       <%= @event.venue.full_address %>
      </div>

      <div class="pull-left">
        <%= fa_icon 'clock-o' %>
      </div>
      <div class="time-details"> 
        <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %> 
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-11 col-md-offset-1">  
      <table class="table">
        <th> Ticket Type </th>
        <th> Unit Price </th>
        <th> Quantity </th>
      
        <% @book_tickets.each do |book_ticket| %>
        <tr>
          <td> <%= book_ticket.ticket_type.name %> </td>
          <td> <%= number_to_currency(book_ticket.ticket_type.price, unit: 'VND ', precision: 0) %> </td>
          <td> <%= book_ticket.quantity %> </td>
        </tr>
        <% end %> 
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-6">
      <button class="btn btn-success btn-lg btn-block"> Total: <%= number_to_currency(@total, unit: 'VND ', precision: 0) %> </button>
    </div>
  <div>
</div>

